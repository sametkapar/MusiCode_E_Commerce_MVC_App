@model MusiCodeWebApp.Models.Category
@{
    ViewBag.Title = "Kategori Düzenle";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}
@section styles
{
    <link href="~/Areas/ManagerPanel/Assets/css/FormStyle.css" rel="stylesheet" />
}
<div class="pagetitle">
    <h2>Kategori Düzenle</h2>
</div>
<div class="formContainer">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(x => x.ID)
        @Html.HiddenFor(x => x.IsDeleted)

        if (ViewBag.mesaj != null)
        {
            <label class="validationmesage">@ViewBag.mesaj</label>
        }
        <div class="row">
            <label>Isim</label>
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "textbox" } })
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "validationmesage" })
        </div>
        <div class="row">
            <label>Açıklama</label>
            @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "textbox" } })
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "validationmesage" })
        </div>
        <div class="row">
            @Html.EditorFor(x => x.IsActive, new { htmlAttributes = new { @id = "isActive" } })
            <label for="isActive"> Aktif Kategori</label>
        </div>
        <div class="row">
            <button type="submit" class="formBtn">Kayıt Ol</button>
        </div>
    }
</div>

